# env.example - 环境变量模板
# 复制此文件为 .env 并填入实际值

# ==================== 数据库配置 ====================
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# ==================== Redis 配置 ====================
REDIS_URL=redis://localhost:6379

# ==================== JWT 配置（双端认证） ====================
# 小程序端 JWT
JWT_CLIENT_SECRET=your-client-jwt-secret-key-min-32-chars
JWT_CLIENT_EXPIRES_IN=7d
JWT_CLIENT_REFRESH_EXPIRES_IN=30d

# 管理后台 JWT
JWT_ADMIN_SECRET=your-admin-jwt-secret-key-min-32-chars
JWT_ADMIN_EXPIRES_IN=2h
JWT_ADMIN_REFRESH_EXPIRES_IN=7d

# ==================== 微信小程序配置 ====================
WECHAT_APPID=wx1234567890abcdef
WECHAT_SECRET=your-wechat-secret

# ==================== AI 服务配置 ====================
AI_SERVICE_URL=http://localhost:8000
AI_API_KEY=your-ai-api-key

# ==================== 对象存储配置 ====================
# 腾讯云 COS
COS_SECRET_ID=your-cos-secret-id
COS_SECRET_KEY=your-cos-secret-key
COS_BUCKET=your-bucket-name
COS_REGION=ap-guangzhou

# Cloudflare R2（备选）
CF_ACCOUNT_ID=your-cf-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET=your-r2-bucket

# ==================== 监控告警 ====================
SENTRY_DSN=https://xxx@sentry.io/xxx
SLACK_WEBHOOK=https://hooks.slack.com/services/xxx
DINGTALK_WEBHOOK=https://oapi.dingtalk.com/robot/send?access_token=xxx

# ==================== 其他配置 ====================
NODE_ENV=production
PORT=3000

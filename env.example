# env.example - 环境变量模板
# 复制此文件为 .env 并填入实际值

# ==================== 数据库配置 ====================
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# ==================== Redis 配置 ====================
REDIS_URL=redis://localhost:6379

# ==================== JWT 配置（双端认证） ====================
# 小程序端 JWT
JWT_CLIENT_SECRET=your-client-jwt-secret-key-min-32-chars
JWT_CLIENT_EXPIRES_IN=7d
JWT_CLIENT_REFRESH_EXPIRES_IN=30d

# 管理后台 JWT
JWT_ADMIN_SECRET=your-admin-jwt-secret-key-min-32-chars
JWT_ADMIN_EXPIRES_IN=2h
JWT_ADMIN_REFRESH_EXPIRES_IN=7d

# ==================== 微信小程序配置 ====================
WECHAT_APPID=wx1234567890abcdef
WECHAT_SECRET=your-wechat-secret

# ==================== AI 服务配置 ====================
AI_SERVICE_URL=http://localhost:8000
AI_SERVICE_KEY=your-ai-service-key

# ==================== 对象存储配置 ====================
# 本地存储（开发默认）
STORAGE_TYPE=local
STORAGE_LOCAL_DIR=./uploads
STORAGE_PUBLIC_URL=http://localhost:3000/uploads

# MinIO（可选）
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=images
MINIO_USE_SSL=false

# ==================== 监控告警 ====================
SENTRY_DSN=https://xxx@sentry.io/xxx
SLACK_WEBHOOK=https://hooks.slack.com/services/xxx
DINGTALK_WEBHOOK=https://oapi.dingtalk.com/robot/send?access_token=xxx

# ==================== 其他配置 ====================
NODE_ENV=production
PORT=3000

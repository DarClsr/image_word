.search-bar {
  margin-bottom: 12px;
}

.filter-scroll {
  white-space: nowrap;
  margin-bottom: 16px;
}

.filter-list {
  display: flex;
  gap: 10px;
  padding-bottom: 4px;
}

.filter-item {
  flex-shrink: 0;
  padding: 6px 16px;
  background: #F3F7FF;
  border-radius: 20px;
  font-size: 13px;
  color: #6B7280;
  transition: all 0.2s ease;
}

.filter-item.active {
  background: #3B82F6;
  color: #FFFFFF;
}

.template-grid {
  display: flex;
  flex-direction: column;
  gap: 14px;
}

.template-card {
  width: 100%;
  background: #FFFFFF;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 8px 20px rgba(38, 98, 255, 0.08);
}

.template-image {
  width: 100%;
  height: 200px;
  background: linear-gradient(135deg, #60A5FA, #93C5FD);
}

.template-info {
  padding: 12px;
}

.template-prompt {
  font-size: 13px;
  color: #3A2B5A;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 8px;
}

.template-meta {
  display: flex;
  gap: 6px;
  margin-bottom: 8px;
}

.model-tag, .style-tag {
  padding: 2px 8px;
  background: #F3F7FF;
  border-radius: 10px;
  font-size: 10px;
  color: #3B82F6;
}

.template-stats {
  display: flex;
  gap: 12px;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 4px;
  font-size: 12px;
  color: #9CA3AF;
}

.stat-icon {
  font-size: 12px;
}

.loading-more, .no-more {
  text-align: center;
  padding: 20px 0;
}

.empty {
  padding: 60px 0;
}

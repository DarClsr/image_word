.user-card {
  display: flex;
  align-items: center;
  padding: 20px;
  background: #FFFFFF;
  border-radius: 20px;
  box-shadow: 0 8px 20px rgba(38, 98, 255, 0.08);
  margin-bottom: 16px;
}

.avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background: linear-gradient(135deg, #60A5FA, #93C5FD);
  margin-right: 14px;
}

.avatar-placeholder {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background: linear-gradient(135deg, #60A5FA, #93C5FD);
  margin-right: 14px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
  font-size: 14px;
  font-weight: 500;
}

.user-info {
  flex: 1;
}

.nickname {
  display: block;
  font-size: 18px;
  font-weight: 600;
  color: #3A2B5A;
  margin-bottom: 4px;
}

.user-id {
  display: block;
  font-size: 12px;
  color: #9CA3AF;
}

.edit-btn {
  padding: 6px 14px;
  background: #F3F7FF;
  border-radius: 20px;
  font-size: 12px;
  color: #3B82F6;
}

.login-card {
  cursor: pointer;
}

.arrow {
  font-size: 20px;
  color: #9CA3AF;
}

.stats-card {
  display: flex;
  background: #FFFFFF;
  border-radius: 16px;
  box-shadow: 0 8px 20px rgba(38, 98, 255, 0.08);
  margin-bottom: 16px;
  padding: 16px 0;
}

.stats-card .stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-right: 1px solid #F3F7FF;
}

.stats-card .stat-item:last-child {
  border-right: none;
}

.stat-value {
  font-size: 22px;
  font-weight: 700;
  color: #3B82F6;
  margin-bottom: 4px;
}

.stat-label {
  font-size: 12px;
  color: #9CA3AF;
}

.menu-section {
  margin-bottom: 16px;
}

.menu-card {
  background: #FFFFFF;
  border-radius: 16px;
  box-shadow: 0 8px 20px rgba(38, 98, 255, 0.08);
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 16px;
  border-bottom: 1px solid #F3F7FF;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 20px;
  margin-right: 12px;
}

.menu-text {
  flex: 1;
  font-size: 15px;
  color: #3A2B5A;
}

.menu-value {
  font-size: 14px;
  color: #3B82F6;
  margin-right: 8px;
}

.logout-btn {
  margin-top: 30px;
  padding: 14px 0;
  background: #FFFFFF;
  border-radius: 16px;
  text-align: center;
  color: #EF4444;
  font-size: 15px;
  box-shadow: 0 8px 20px rgba(38, 98, 255, 0.08);
}

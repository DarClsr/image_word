/**
 * 首页样式
 */

.home-page {
  padding: 0;
  background: var(--bg-secondary);
}

/* Hero 区域 */
.hero-section {
  position: relative;
  padding: 80rpx 32rpx 60rpx;
  overflow: hidden;
}

.hero-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #3B82F6 0%, #8B5CF6 100%);
}

.hero-bg::after {
  content: '';
  position: absolute;
  top: 50%;
  right: -100rpx;
  width: 400rpx;
  height: 400rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.hero-content {
  position: relative;
  z-index: 1;
}

.hero-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 12rpx;
}

.hero-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.85);
}

/* 功能入口 */
.feature-section {
  padding: 32rpx 24rpx;
  margin-top: -40rpx;
  position: relative;
  z-index: 2;
}

.feature-card {
  display: flex;
  align-items: center;
  padding: 32rpx;
  background: #ffffff;
  border-radius: var(--radius-lg);
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  position: relative;
  overflow: hidden;
}

.feature-card.main-feature {
  background: linear-gradient(135deg, #ffffff 0%, #f0f9ff 100%);
  border: 2rpx solid rgba(59, 130, 246, 0.2);
}

.feature-card.disabled-feature {
  opacity: 0.85;
}

.feature-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.3);
  pointer-events: none;
}

.feature-icon-wrapper {
  position: relative;
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--bg-secondary);
  border-radius: var(--radius-md);
  margin-right: 24rpx;
  flex-shrink: 0;
}

.feature-icon {
  font-size: 48rpx;
}

.feature-badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  padding: 4rpx 12rpx;
  font-size: 18rpx;
  font-weight: 600;
  border-radius: 16rpx;
  color: #ffffff;
}

.feature-badge.hot {
  background: linear-gradient(135deg, #EF4444, #F97316);
}

.feature-badge.coming {
  background: linear-gradient(135deg, #6B7280, #9CA3AF);
  font-size: 16rpx;
}

.feature-info {
  flex: 1;
  min-width: 0;
}

.feature-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.feature-desc {
  display: block;
  font-size: 24rpx;
  color: var(--text-muted);
  line-height: 1.5;
}

.feature-arrow {
  font-size: 40rpx;
  color: var(--text-muted);
  margin-left: 16rpx;
}

/* 快捷入口 */
.quick-section {
  padding: 32rpx 24rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-link {
  font-size: 26rpx;
  color: var(--color-primary);
}

.quick-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.quick-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 28rpx 16rpx;
  background: #ffffff;
  border-radius: var(--radius-md);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  transition: all 0.2s;
}

.quick-item:active {
  transform: scale(0.96);
  background: var(--bg-secondary);
}

.quick-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.quick-name {
  font-size: 24rpx;
  color: var(--text-secondary);
  white-space: nowrap;
}

/* 最近作品 */
.recent-section {
  padding: 32rpx 24rpx;
}

.recent-scroll {
  margin: 0 -24rpx;
  padding: 0 24rpx;
}

.recent-list {
  display: flex;
  gap: 16rpx;
  padding-right: 24rpx;
}

.recent-item {
  flex-shrink: 0;
  width: 200rpx;
  height: 260rpx;
  border-radius: var(--radius-md);
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.recent-image {
  width: 100%;
  height: 100%;
}

/* 使用说明 */
.guide-section {
  padding: 32rpx 24rpx;
}

.guide-steps {
  background: #ffffff;
  border-radius: var(--radius-lg);
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.guide-step {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 0;
}

.guide-step:not(:last-child) {
  border-bottom: 1rpx solid var(--border-color);
}

.step-number {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #3B82F6, #8B5CF6);
  color: #ffffff;
  font-size: 24rpx;
  font-weight: 600;
  border-radius: 50%;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.step-content {
  flex: 1;
}

.step-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 4rpx;
}

.step-desc {
  display: block;
  font-size: 24rpx;
  color: var(--text-muted);
}

/* 安全区域 */
.safe-bottom {
  height: calc(env(safe-area-inset-bottom) + 32rpx);
}

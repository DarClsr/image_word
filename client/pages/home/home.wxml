<view class="container home-page">
  <!-- 顶部 Banner -->
  <view class="hero-section">
    <view class="hero-bg"></view>
    <view class="hero-content">
      <text class="hero-title">AI 创作助手</text>
      <text class="hero-subtitle">一键生成精美图文内容</text>
    </view>
  </view>

  <!-- 功能入口 -->
  <view class="feature-section">
    <!-- 图文生成（主推） -->
    <view class="feature-card main-feature" bindtap="goImageText">
      <view class="feature-icon-wrapper">
        <text class="feature-icon">📝</text>
        <view class="feature-badge hot">HOT</view>
      </view>
      <view class="feature-info">
        <text class="feature-title">图文生成</text>
        <text class="feature-desc">AI 自动生成小红书风格图文，支持金句、干货、清单等多种模板</text>
      </view>
      <view class="feature-arrow">
        <text>›</text>
      </view>
    </view>

    <!-- 图片生成（即将开放） -->
    <view class="feature-card disabled-feature" bindtap="showComingSoon">
      <view class="feature-icon-wrapper">
        <text class="feature-icon">🎨</text>
        <view class="feature-badge coming">即将开放</view>
      </view>
      <view class="feature-info">
        <text class="feature-title">图片生成</text>
        <text class="feature-desc">输入描述，AI 生成创意图片，支持多种风格和模型</text>
      </view>
      <view class="feature-arrow">
        <text class="muted">›</text>
      </view>
      <view class="feature-mask"></view>
    </view>
  </view>

  <!-- 快捷入口 -->
  <view class="quick-section">
    <text class="section-title">快捷创作</text>
    <view class="quick-grid">
      <view class="quick-item" bindtap="goImageTextWithTemplate" data-template="quote">
        <text class="quick-icon">💬</text>
        <text class="quick-name">金句语录</text>
      </view>
      <view class="quick-item" bindtap="goImageTextWithTemplate" data-template="tips">
        <text class="quick-icon">💡</text>
        <text class="quick-name">技巧干货</text>
      </view>
      <view class="quick-item" bindtap="goImageTextWithTemplate" data-template="list">
        <text class="quick-icon">📝</text>
        <text class="quick-name">清单合集</text>
      </view>
      <view class="quick-item" bindtap="goImageTextWithTemplate" data-template="knowledge">
        <text class="quick-icon">🎓</text>
        <text class="quick-name">知识科普</text>
      </view>
    </view>
  </view>

  <!-- 最近作品 -->
  <view class="recent-section" wx:if="{{isLoggedIn && recentWorks.length}}">
    <view class="section-header">
      <text class="section-title">最近作品</text>
      <text class="section-link" bindtap="goMyWorks">查看全部 ›</text>
    </view>
    <scroll-view scroll-x class="recent-scroll" enhanced show-scrollbar="{{false}}">
      <view class="recent-list">
        <block wx:for="{{recentWorks}}" wx:key="id">
          <view class="recent-item" bindtap="onPreviewWork" data-url="{{item.imageUrl}}">
            <image class="recent-image" src="{{item.imageUrl}}" mode="aspectFill" />
          </view>
        </block>
      </view>
    </scroll-view>
  </view>

  <!-- 使用说明 -->
  <view class="guide-section">
    <text class="section-title">使用说明</text>
    <view class="guide-steps">
      <view class="guide-step">
        <view class="step-number">1</view>
        <view class="step-content">
          <text class="step-title">输入主题</text>
          <text class="step-desc">描述你想要的内容主题</text>
        </view>
      </view>
      <view class="guide-step">
        <view class="step-number">2</view>
        <view class="step-content">
          <text class="step-title">选择模板</text>
          <text class="step-desc">金句、干货、清单等多种风格</text>
        </view>
      </view>
      <view class="guide-step">
        <view class="step-number">3</view>
        <view class="step-content">
          <text class="step-title">AI 生成</text>
          <text class="step-desc">自动生成文案并渲染成精美图片</text>
        </view>
      </view>
    </view>
  </view>

  <!-- 底部间距 -->
  <view class="safe-bottom"></view>
</view>

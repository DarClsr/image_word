.login-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding-top: 80px;
}

.logo-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60px;
}

.logo {
  width: 90px;
  height: 90px;
  border-radius: 24px;
  background: linear-gradient(135deg, #3B82F6, #60A5FA);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16px;
  box-shadow: 0 16px 40px rgba(59, 130, 246, 0.3);
}

.logo-icon {
  font-size: 40px;
}

.app-name {
  font-size: 24px;
  font-weight: 700;
  color: #3A2B5A;
  margin-bottom: 8px;
}

.app-slogan {
  font-size: 14px;
  color: #9CA3AF;
}

.login-area {
  padding: 0 24px;
}

.login-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  width: 100%;
  height: 50px;
  border-radius: 25px;
  font-size: 16px;
  font-weight: 500;
  margin-bottom: 14px;
  border: none;
}

.login-btn::after {
  border: none;
}

.wechat-btn {
  background: #07C160;
  color: #FFFFFF;
}

.avatar-btn {
  background: #3B82F6;
  color: #FFFFFF;
}

.btn-icon {
  font-size: 20px;
}

.divider {
  display: flex;
  align-items: center;
  margin: 24px 0;
}

.line {
  flex: 1;
  height: 1px;
  background: #E5E7EB;
}

.divider-text {
  padding: 0 16px;
  font-size: 13px;
  color: #9CA3AF;
}

.other-login {
  text-align: center;
  font-size: 14px;
  color: #6B7280;
  padding: 10px 0;
}

.agreement {
  position: fixed;
  bottom: 60px;
  left: 0;
  right: 0;
  padding: 0 24px;
}

.checkbox-area {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
}

.checkbox {
  width: 16px;
  height: 16px;
  border: 1.5px solid #D1D5DB;
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.checkbox.checked {
  background: #3B82F6;
  border-color: #3B82F6;
  color: #FFFFFF;
  font-size: 10px;
}

.agreement-text {
  font-size: 12px;
  color: #9CA3AF;
  white-space: nowrap;
}

.agreement-text .link {
  color: #3B82F6;
}

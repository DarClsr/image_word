<view class="container">
  <view class="card empty" wx:if="{{items.length === 0}}">
    <text>还没有作品，先生成一张吧</text>
    <view style="height: 12px;"></view>
    <t-button class="btn-primary" theme="primary" bind:tap="goHome">去生成</t-button>
  </view>

  <view wx:else class="grid">
    <block wx:for="{{items}}" wx:key="id">
      <view class="card">
        <image class="thumb" mode="aspectFill" src="{{item.url}}" />
        <view style="height: 8px;"></view>
        <text class="muted">{{item.time}}</text>
      </view>
    </block>
  </view>
</view>

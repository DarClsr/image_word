/**
 * 图文生成页面样式
 */

.image-text-page {
  padding-bottom: calc(env(safe-area-inset-bottom) + 32rpx);
}

/* 输入卡片 */
.input-card {
  margin: 24rpx;
  padding: 32rpx;
  background: var(--bg-card);
  border-radius: var(--radius-lg);
}

.input-header {
  margin-bottom: 24rpx;
}

.input-header .label {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.input-header .hint {
  display: block;
  margin-top: 8rpx;
  font-size: 24rpx;
  color: var(--text-muted);
}

.topic-textarea {
  background: var(--bg-secondary);
  border-radius: var(--radius-md);
  padding: 24rpx;
}

/* 区块 */
.section {
  margin: 32rpx 24rpx;
}

.section-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 20rpx;
}

/* 横向滚动选项 */
.option-scroll {
  margin: 0 -24rpx;
  padding: 0 24rpx;
}

.option-list {
  display: flex;
  gap: 20rpx;
  padding-right: 24rpx;
}

.option-item {
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 32rpx;
  background: var(--bg-card);
  border-radius: var(--radius-md);
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.option-item.selected {
  border-color: var(--color-primary);
  background: rgba(99, 102, 241, 0.1);
}

.option-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.option-name {
  font-size: 24rpx;
  color: var(--text-secondary);
  white-space: nowrap;
}

.option-item.selected .option-name {
  color: var(--color-primary);
  font-weight: 500;
}

/* 标签列表 */
.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-item {
  padding: 16rpx 28rpx;
  background: var(--bg-card);
  border-radius: 32rpx;
  font-size: 26rpx;
  color: var(--text-secondary);
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.tag-item.selected {
  border-color: var(--color-primary);
  color: var(--color-primary);
  background: rgba(99, 102, 241, 0.1);
}

/* 比例选择 */
.ratio-list {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.ratio-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 12rpx;
  background: var(--bg-card);
  border-radius: var(--radius-md);
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.ratio-item.selected {
  border-color: var(--color-primary);
  background: rgba(99, 102, 241, 0.1);
}

.ratio-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.ratio-name {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.ratio-value {
  font-size: 20rpx;
  color: var(--text-muted);
  margin-top: 4rpx;
}

.ratio-item.selected .ratio-name,
.ratio-item.selected .ratio-value {
  color: var(--color-primary);
}

/* 模型选择 */
.model-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.model-item {
  padding: 24rpx;
  background: var(--bg-card);
  border-radius: var(--radius-md);
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.model-item.selected {
  border-color: var(--color-primary);
  background: rgba(99, 102, 241, 0.05);
}

.model-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.model-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.model-quality {
  font-size: 20rpx;
}

.model-desc {
  font-size: 24rpx;
  color: var(--text-muted);
}

/* 生成按钮 */
.generate-section {
  margin: 40rpx 24rpx;
}

.generate-tip {
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: var(--text-muted);
  margin-top: 16rpx;
}

/* 结果区域 */
.result-section {
  margin: 32rpx 24rpx;
  padding: 32rpx;
  background: var(--bg-card);
  border-radius: var(--radius-lg);
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.result-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.action-btn {
  font-size: 24rpx;
  color: var(--color-primary);
}

/* 图片展示 */
.image-wrapper {
  position: relative;
  border-radius: var(--radius-md);
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
}

.result-image {
  display: block;
  width: 100%;
}

.image-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.5));
  text-align: center;
}

.overlay-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 文案卡片 */
.content-card {
  margin-top: 24rpx;
  padding: 24rpx;
  background: var(--bg-secondary);
  border-radius: var(--radius-md);
}

.content-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  line-height: 1.5;
}

.content-subtitle {
  display: block;
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-top: 8rpx;
}

.content-body {
  margin-top: 16rpx;
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.8;
}

.content-item {
  margin-bottom: 8rpx;
}

.content-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 16rpx;
}

.content-tags .tag {
  font-size: 24rpx;
  color: var(--color-primary);
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 24rpx;
}

.btn-action {
  flex: 1;
}

# ============ 应用配置 ============
NODE_ENV=development
PORT=3000
API_PREFIX=/api

# ============ 数据库配置 ============
DATABASE_URL=postgresql://postgres:password@localhost:5432/image_word?schema=public

# ============ Redis 配置 ============
REDIS_URL=redis://localhost:6379

# ============ JWT 配置（双端分离） ============
# 小程序端 JWT 密钥（至少32位）
JWT_CLIENT_SECRET=your-client-secret-key-at-least-32-characters-long
JWT_CLIENT_EXPIRES_IN=7d
JWT_CLIENT_REFRESH_EXPIRES_IN=30d

# 后台管理端 JWT 密钥（与小程序端不同）
JWT_ADMIN_SECRET=your-admin-secret-key-at-least-32-characters-long
JWT_ADMIN_EXPIRES_IN=2h
JWT_ADMIN_REFRESH_EXPIRES_IN=7d

# ============ 微信小程序配置 ============
WECHAT_APPID=wx1234567890
WECHAT_SECRET=your-wechat-secret

# ============ 对象存储配置 ============
STORAGE_TYPE=minio
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=images
MINIO_USE_SSL=false

# ============ AI 图像生成服务配置 ============
AI_SERVICE_URL=http://localhost:8000
AI_SERVICE_KEY=your-ai-service-key

# ============ LLM 大语言模型配置（提示词扩展） ============
# 推荐：DeepSeek（便宜）、Qwen（阿里）、GLM（智谱）
LLM_API_URL=https://api.deepseek.com/v1
LLM_API_KEY=your-llm-api-key
LLM_MODEL=deepseek-chat

# ============ 图文生成模型配置 ============
# Ideogram - 最擅长文字渲染，小红书风格首选
IDEOGRAM_API_KEY=your-ideogram-api-key

# Flux - 通过 FAL.ai 调用，艺术感强
FLUX_API_KEY=your-fal-ai-api-key

# 即梦 Jimeng - 字节跳动，国内友好
JIMENG_API_KEY=your-jimeng-api-key

# GPTGOD 聚合平台
GPTGOD_API_KEY=your-gptgod-api-key
GPTGOD_BASE_URL=https://api.gptgod.online

# ============ 安全配置 ============
# 管理端登录失败锁定次数
ADMIN_LOGIN_MAX_FAIL=5
# 管理端登录失败锁定时间（秒）
ADMIN_LOGIN_LOCK_TIME=1800

# CORS 允许的域名（逗号分隔）
CORS_ORIGINS=http://localhost:3001,http://localhost:5173

# ============ 日志配置 ============
LOG_LEVEL=debug
